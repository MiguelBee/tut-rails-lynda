<%= @page_title = "Edit Subject" %>

<%= link_to("<< Back to List", sections_path(page_id: @page.id), :class => 'back-link') %>

<div class="subjects edit">
  <h2>Update Sections</h2>

  <%= form_for(@section, url: section_path(@section, page_id: @page.id)) do |f| %>

    <%= render partial: "section_form", locals: {f: f} %>
    
    <div class="form-buttons">
      <%= f.submit("Update Section") %>
    </div>

  <% end %>
</div>